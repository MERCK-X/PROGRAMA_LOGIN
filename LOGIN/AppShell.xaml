<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LOGIN.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LOGIN.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LOGIN">

    <ShellContent Route="SplashScreen" ContentTemplate="{DataTemplate local:SplashScreen}" />
    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Route="Registro" ContentTemplate="{DataTemplate local:PantallaRegistrarme}" />
    <ShellContent Route="Login" ContentTemplate="{DataTemplate local:PantallaLoginExistente}" />
    <ShellContent Route="RecuperarPassword" ContentTemplate="{DataTemplate local:RecuperarPasswordView}" />
</Shell>
