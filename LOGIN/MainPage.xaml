<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOGIN.MainPage">
 
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <Image Source="panda.png" WidthRequest="100" HeightRequest="100" />
        <Label HorizontalTextAlignment="Center" FontSize="30" TextColor="DarkOliveGreen">Pandacore</Label>
        <!-- Primer Button -->
        <Button Text="Registrarme" WidthRequest="100" x:Name="BTN_registrar" Clicked="BTN_Entrar_registrar"  HorizontalOptions="Center" />

        <!-- Segundo Button -->
        <Button Text="Tiengo una cuenta" WidthRequest="100" x:Name="BTN_existente" Clicked="BTN_Entrar_existente"  HorizontalOptions="Center" />


    </VerticalStackLayout>
 

</ContentPage>
