<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOGIN.PantallaLoginExistente"
             Title="Login" >

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" >

        <Image Source="panda.png" WidthRequest="100" HeightRequest="100" />
        <Label HorizontalOptions="CenterAndExpand" FontSize="40" TextColor="DarkOliveGreen" >PANDACORE LOGIN</Label>
        <BoxView HeightRequest="1" WidthRequest="310" BackgroundColor="DarkSlateGrey"/>
        <Entry 
                x:Name="txtCorreo"
                Placeholder="Correo@ejemplo.com"
                HorizontalOptions="Center" 
                FontSize="25"/>
        <Entry 
                x:Name="txtContraseña"
                Placeholder="Contraseña"
                HorizontalOptions="Center" 
                FontSize="25"/>
    </VerticalStackLayout>
</ContentPage>