<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOGIN.PantallaLoginExistente">
    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Correo electrónico" Text="{Binding Email}" />
        <Entry Placeholder="Contraseña" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Iniciar Sesión" Command="{Binding IniciarSesionCommand}" />
        <Button Text="Olvidé mi contraseña" Command="{Binding RecuperarPasswordCommand}" />
    </VerticalStackLayout>
</ContentPage>